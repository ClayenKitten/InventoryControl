<mah:MetroWindow x:Class="InventoryControl.MainWindow"
                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
                xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
                xmlns:local="clr-namespace:InventoryControl"
                xmlns:util="clr-namespace:InventoryControl.Util"
                xmlns:cctrl="clr-namespace:InventoryControl.UserControls"
                mc:Ignorable="d"
        Title="Система Складского Учёта" MinWidth="800" MinHeight="600" WindowStartupLocation="CenterScreen">
    <mah:MetroWindow.Resources>
        <Style TargetType="MenuItem" BasedOn="{StaticResource MahApps.Styles.MenuItem}" x:Key="MenuItemCheckable">
            <Setter Property="IsCheckable" Value="True"/>
            <Setter Property="StaysOpenOnClick" Value="True"/>
        </Style>

        <DataTemplate x:Key="HighlightTextBlockDataTemplate">
            <util:HighlightTextBlock Text="{Binding Path=Title}" HighlightPhrase="{Binding ElementName=Searchbox, Path=Text}" HighlightBrush="Orange"/>
        </DataTemplate>

    </mah:MetroWindow.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*" MinWidth="500"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="1*" MinWidth="250"/>

        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="20*"/>
            </Grid.RowDefinitions>

            <Menu Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3"
                  BorderBrush="Black" BorderThickness="0,1,0,1">
                <MenuItem Header="Склад">
                    <MenuItem Header="Добавить товар" Icon="{iconPacks:FontAwesome Kind=PlusSquareSolid}" Click="AddProductClick"/>
                    <Separator/>
                    <MenuItem Header="Загрузить резервную копию" Icon="{iconPacks:FontAwesome Kind=FileImportSolid}" Click="LoadBackupButtonClick"/>
                    <MenuItem Header="Создать резервную копию" Icon="{iconPacks:FontAwesome Kind=FileExportSolid}" Click="SaveBackupButtonClick"/>
                </MenuItem>
                <MenuItem Header="Оборот">
                    <MenuItem Header="Оформить накладную" Icon="{iconPacks:FontAwesome Kind=FileInvoiceSolid}">
                        <MenuItem Header="Продажа"/>
                        <MenuItem Header="Покупка"/>
                    </MenuItem>
                    <MenuItem Header="Оформить возврат" Icon="{iconPacks:Material Kind=CashRefund}" IsEnabled="False"/>
                    <MenuItem Header="История" Icon="{iconPacks:FontAwesome Kind=HistorySolid}" IsEnabled="False"/>
                </MenuItem>
                <MenuItem Header="Отчёты">
                    <MenuItem Header="Приход-расход товаров" Icon="{iconPacks:FontAwesome Kind=ExchangeAltSolid}" IsEnabled="False"/>
                    <MenuItem Header="Статистика" Icon="{iconPacks:FontAwesome Kind=ChartAreaSolid}" IsEnabled="False"/>
                </MenuItem>
                <MenuItem Header="Настройки">
                    <MenuItem Header="Точки сбыта" Icon="{iconPacks:Material Kind=PointOfSale}" IsEnabled="False"/>
                </MenuItem>
            </Menu>
            <TextBox Grid.Row="0" Grid.Column="1"
                    KeyUp="SearchBox_KeyUp" Name="Searchbox"
                    mah:TextBoxHelper.Watermark="Поиск...">
                <TextBox.Style>
                    <Style BasedOn="{StaticResource MahApps.Styles.TextBox.Search}" TargetType="TextBox">
                        <Setter Property="BorderThickness" Value="1,1,0,1"/>
                        <Setter Property="BorderBrush" Value="Black"/>
                        <Setter Property="VerticalContentAlignment" Value="Center"/>
                    </Style>
                </TextBox.Style>
            </TextBox>

            <cctrl:ProductDataGrid x:Name="MainDataGrid" Grid.Row="1" Grid.ColumnSpan="3"/>
        </Grid>
        <GridSplitter Grid.Column="1" ShowsPreview="False" Width="7"
                      HorizontalAlignment="Center" VerticalAlignment="Stretch" 
                      BorderBrush="Black" BorderThickness="1,1,1,0"/>
        <cctrl:SellingListControl Grid.Column="2" x:Name="SellingList"/>
    </Grid>
</mah:MetroWindow>