<c:ControlPanel x:Class="InventoryControl.View.SettingsViewer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:c="clr-namespace:InventoryControl.View.Controls"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:InventoryControl.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <TabControl TabStripPlacement="Left">
            <TabControl.Style>
                <Style TargetType="TabControl"/>
            </TabControl.Style>
            <TabItem Header="Основное" FontSize="50">
            </TabItem>
            <TabItem Header="Внешний вид">
            </TabItem>
            <TabItem Header="База данных">
            </TabItem>
            <TabItem Header="Безопасность">
            </TabItem>
        </TabControl> 
    </Grid>
</c:ControlPanel>
